<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PeakForm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PeakForm"
    Shell.FlyoutBehavior="Disabled"
    Title="PeakForm">

    <ShellContent
        Title="AboutPage"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage"/>

    <ShellContent
        Title="AboutPage2"
        ContentTemplate="{DataTemplate local:AboutPage2}"
        Route="AboutPage2"/>

    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="SignUpPage"
        ContentTemplate="{DataTemplate local:SignUpPage}"
        Route="SignUpPage"/>

</Shell>
